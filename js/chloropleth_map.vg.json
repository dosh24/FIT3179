{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Active Cases (10 Oct 2020)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/dosh24/FIT3179/main/js/custom_topon.json",
    "format": {
          "type": "topojson",
          "feature": "custom_topon"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/dosh24/FIT3179/main/data/country_c.csv"
        },
        "key": "country_txt",
        "fields": ["count"]
      }
    },
    {"calculate": "datum.count + 0.1", "as": "Count"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Number of Terror Attacks",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "country_txt"},
      {"field": "count", "type": "quantitative"}
    ]
  }

}
